{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": false,
        "target": "es2015",
        "emitDecoratorMetadata": true,
        "lib": ["es2018", "dom"],
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule":true,
        "moduleResolution": "node",
    },
    "angularCompilerOptions": {
      "enableIvy": true,
      "fullTemplateTypeCheck": true,
      "strictInjectionParameters": true
    }
}