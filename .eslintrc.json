{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "openlayers"
  ],
  "plugins": ["@typescript-eslint"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "define": "readonly",
    "stmPath": "readonly",
    "hslMin": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "brace-style": "warn",
    "no-console": "warn",
    "object-curly-spacing": "warn",
    "prefer-arrow-callback": "warn",
    "space-before-function-paren": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "webpack.*.js"
      ],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ],
  "settings": {
    "import/extensions": [
      ".js",
      ".ts"
    ]
  }
}